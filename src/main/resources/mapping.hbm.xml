<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ru.levchenko.hibernateCRUD.models">

    <class name="User" table="users">
        <id name="id" column="id">
            <generator class="sequence-identity"/>
        </id>

        <property name="name" type="string" column="name"/>
        <property name="password" type="string" column="password"/>

        <list name="roles" table="users_roles" lazy="false" cascade="all">
            <key>
                <column name="id"/>
            </key>
            <one-to-many class="ru.levchenko.hibernateCRUD.models.UserRole"/>
        </list>
    </class>

    <class name="UserRole" table="users_roles">

        <composite-id mapped="false">
            <key-many-to-one name="userRoleKey" class="UserRoleKey" column="id"  lazy="false"/>
            <key-property name="userRoleKey" column="userRoleKey" type="long" />
        </composite-id>
    </class>
</hibernate-mapping>

